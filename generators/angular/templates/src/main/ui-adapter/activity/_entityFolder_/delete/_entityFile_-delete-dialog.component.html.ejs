<div cdkDrag class="dialog-mask" [ngaTranslatePrefix]="translatePrefix()">
  <form
    class="dialog col-12 sm:col-11 max-w-45rem"
    name="deleteForm"
    (ngSubmit)="confirmDelete()"
  >
    <div class="dialog-header dialog-movable">
      <div class="dialog-title" cdkDragHandle>
        <span ngaTranslate="delete.title">Confirm delete operation</span>
      </div>
      <button pButton type="button" icon="pi pi-times" class="dialog-header-icon p-link" (click)="close()"></button>
    </div>

    <div class="dialog-body">
      <p ngaTranslate="delete.question" [translateValues]="{ id: <%= entityInstance %>?.<%= primaryKey.name %> }">
        Are you sure you want to delete this <%= entityClassHumanized %>?
      </p>
    </div>

    <div class="dialog-footer">
      <button
        pButton
        type="button"
        icon="pi pi-ban"
        [label]="'delete.cancel' | ngaTranslate : 'Cancel'"
        class="p-button-outlined p-button-secondary"
        (click)="close()"
      ></button>

      <button
        pButton
        type="submit"
        class="p-button-danger"
        icon="pi pi-trash"
        [loading]="inProgress"
        [label]="'delete.submit' | ngaTranslate: 'Delete'"
      ></button>
    </div>
  </form>
</div>
